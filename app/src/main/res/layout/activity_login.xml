<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/cek_username"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/sppt_logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cek_username"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/cek_password"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorTint"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawablePadding="5sp"
        android:gravity="left"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Masukkan Username"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/cek_password"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/btn_home"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/colorTint"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawablePadding="5sp"
        android:gravity="left"
        android:hint="Masukkan Password"
        android:textCursorDrawable="@drawable/cursor_color"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="14dp" />


    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="289dp"
        android:background="@drawable/btn_1"
        android:gravity="center"
        android:text="Login"
        android:onClick="login"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

</RelativeLayout>